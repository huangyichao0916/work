.mine
    padding 0 0.533333rem
    .mine-header-wrapper
        background-color #fff
        z-index 1000
        position fixed
        height 44px
        top 0
        right 0
        left 0
        line-height 44px 
        text-align center
        span 
            font-size 18px  
        .icon
            position absolute
            right .533333rem
            color #999999
    .mine-info-wrapper
        background-color #fff
        padding-top: .293333rem
        display flex
        .avatar
            background-color #aaa
            width 1.893333rem
            height 1.893333rem
            border-radius 100%
            overflow hidden
            img 
                width 100%
        .name-and-phone
            flex 1
            padding-left .56rem
            .name
                height 1.333333rem
                line-height 1.333333rem
                font-size .533333rem
            .phone-and-selfPage
                display flex
                justify-content center
                align-items center
                font-size .293333rem
                .phone
                    flex 1
                .selfPage
                    width 1.786667rem
                    color #fa8919
                    .icon
                        font-size .293333rem
    .slider-container
        overflow hidden
        .swiper-wrapper
            height 1.333333rem
            background-color #fff
            margin-top .72rem
            margin-bottom .613333rem
            .swiper-slide
                width 100%
                border-radius 5px
                overflow hidden
    .bscroll-wrapper
        height 100px