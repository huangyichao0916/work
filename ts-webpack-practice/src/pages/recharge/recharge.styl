.recharge
    background-color: ivory
    margin-top 100px
    .balance
        position absolute
        left 50%
        transform: translateX(-50%)
        top 20px
        font-size: 50px
        color: gold
    .wrapper
        display: flex
        flex-wrap: wrap
        justify-content: space-between
        .item 
            width 30%
            height 40px
            display flex
            justify-content: center
            align-items: center
            outline: 1px solid blue  
            margin-bottom 10px
            &.active
                background-color: gold
    button 
        width 100px
        height 80px
        margin-top 50px
        margin-left 50%
        transform: translateX(-50%)
